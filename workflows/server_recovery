name: Supabase Health - Recovery (server_recovery)

on:
  schedule:
    - cron: "*/5 * * * *"
  workflow_dispatch:

permissions:
  contents: write

jobs:
  recover:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Health check (silent)
        id: health
        shell: bash
        run: |
          set -euo pipefail

          BASE_URL="${{ secrets.SUPABASE_BULLETIN_URL }}"
          ANON_KEY="${{ secrets.SUPABASE_BULLETIN_ANON_KEY }}"

          BASE_URL="${BASE_URL%/}"
          HEALTH_URL="${BASE_URL}/auth/v1/health"

          code="$(curl -sS -o /dev/null -w "%{http_code}" \
            -H "apikey: ${ANON_KEY}" \
            -H "Authorization: Bearer ${ANON_KEY}" \
            -H "Accept: application/json" \
            "${HEALTH_URL}" || true)"

          if [[ "$code" == "200" ]]; then
            echo "status=ok" >> "$GITHUB_OUTPUT"
          else
            echo "status=ko" >> "$GITHUB_OUTPUT"
          fi

      - name: Commit recovery if alert was active
        shell: bash
        run: |
          set -euo pipefail

          mkdir -p health

          COUNTER_FILE="health/failures.txt"
          ALERT_FLAG="health/alert_active.flag"
          LOG_FILE="health/logs.txt"

          # Si KO -> on ne fait rien ici
          if [[ "${{ steps.health.outputs.status }}" != "ok" ]]; then
            exit 0
          fi

          # Si OK mais pas d'alerte active -> rien (évite spam)
          if [[ ! -f "$ALERT_FLAG" ]]; then
            # reset compteur si présent
            rm -f "$COUNTER_FILE"
            exit 0
          fi

          # OK + alerte active -> recovery
          ts="$(date -u +"%Y-%m-%dT%H:%M:%SZ")"
          echo "$ts server_recovery" >> "$LOG_FILE"

          rm -f "$ALERT_FLAG" "$COUNTER_FILE"

          git config user.name "supabase-health-bot"
          git config user.email "health-bot@users.noreply.github.com"

          git add health
          git commit -m "server_recovery: Supabase health OK"
          git push
